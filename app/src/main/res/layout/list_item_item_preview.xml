<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="@dimen/list_item_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.synnapps.carouselview.CarouselView
            android:id="@+id/carousel_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/carousel_height"
            android:background="@android:color/darker_gray"
            app:autoPlay="false"
            app:fillColor="#FFFFFFFF"
            app:layout_collapseMode="parallax"
            app:layout_collapseParallaxMultiplier="0.5"
            app:pageColor="#00000000"
            app:radius="@dimen/space_4"
            app:strokeColor="@android:color/white"
            app:strokeWidth="1dp" />


        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/space_16"
            android:paddingTop="@dimen/space_16"
            android:paddingEnd="@dimen/space_16"
            android:textAppearance="@style/TAHeader2"
            tools:text="Baby Genius - Four Seasons" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_4"
            android:layout_marginBottom="@dimen/space_16"
            android:paddingStart="@dimen/space_16"
            android:paddingEnd="@dimen/space_16"
            android:text="todo: unit value"
            android:textAppearance="@style/TASubTitle2" />

    </LinearLayout>

</androidx.cardview.widget.CardView>